pragma solidity ^0.8.20;

import "forge-std/Script.sol";
import {PredictionMarketFactory} from "../contracts/src/PredictionMarketFactory.sol";
import {PoolManager} from "v4-core/PoolManager.sol";
import {UMAOptimisticOracle} from "../contracts/src/UMAOptimisticOracle.sol";
import {IERC20} from "@openzeppelin/contracts/token/ERC20/IERC20.sol";

/**
 * @title DeployFactory
 * @notice Script to deploy PredictionMarketFactory with Uniswap V4 swap functionality
 * @dev Deploy factory to Sepolia testnet
 */
contract DeployFactory is Script {
    function run() external {
        uint256 deployerKey = vm.envUint("PRIVATE_KEY");
        vm.startBroadcast(deployerKey);

        // Deploy factory with constructor parameters
        PredictionMarketFactory factory = new PredictionMarketFactory(
            PoolManager(0xd439886628539bce073347BE317fc3ca222F66d9), // PoolManager (Uniswap V4)
            UMAOptimisticOracle(0xbc073223AC223851E4aC63850EDC51A4837A37D3), // UMA Optimistic Oracle
            IERC20(0xcAe730E167394CD5763aEcAB91a9B8eBAF130A4B)  // USDC (Sepolia)
        );

        vm.stopBroadcast();

        console.log("===================================");
        console.log("PredictionMarketFactory Deployed!");
        console.log("===================================");
        console.log("Factory Address:", address(factory));
        console.log("");
        console.log("Next Steps:");
        console.log("1. Copy this address");
        console.log("2. Update frontend/lib/constants.ts");
        console.log("3. Run: forge script script/DeployRailgunAdapter.s.sol --rpc-url $SEPOLIA_RPC_URL --broadcast");
        console.log("===================================");
    }
}
